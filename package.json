{
  "name": "@cocalc/widgets",
  "version": "0.1.0",
  "description": "Jupyter interactive widgets for CoCalc",
  "license": "Apache-2.0",
  "files": ["lib/**/*.d.ts", "dist/"],
  "main": "./dist/manager.dev.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "node build.js && pnpm tsc",
    "clean": "rimraf dist && rimraf lib",
    "compile:test": "tsc -p test/server",
    "compile": "tsc",
    "fix": "npx prettier --write .",
    "prepare": "pnpm clean && pnpm build",
    "server": "pnpm compile:test && node test/server/lib/server.js",
    "test:jest": "node node_modules/.bin/jest",
    "test:karma:dev": "./node_modules/karma/bin/karma start karma.conf.js",
    "test:karma": "pnpm build && ./node_modules/karma/bin/karma start karma.conf.js --single-run",
    "test:prettier": "npx prettier --check .",
    "test": "pnpm test:jest && pnpm test:karma && pnpm test:prettier"
  },
  "devDependencies": {
    "@jupyter-widgets/base": "6.0.0-rc.2",
    "@jupyter-widgets/base-manager": "1.0.0-rc.2",
    "@jupyter-widgets/controls": "5.0.0-rc.2",
    "@types/jest": "^26.0.24",
    "@types/mocha": "^9.0.0",
    "@types/node": "^20.14.10",
    "backbone": "1.6.0",
    "esbuild": "^0.11.23",
    "esbuild-jest": "^0.5.0",
    "jasmine-core": "^3.8.0",
    "jest": "^27.0.6",
    "jest-puppeteer": "^5.0.4",
    "karma": "^6.3.4",
    "karma-chrome-launcher": "^3.1.0",
    "karma-esbuild": "^2.2.0",
    "karma-jasmine": "^4.0.1",
    "karma-jasmine-html-reporter": "^1.7.0",
    "karma-typescript": "^5.5.4",
    "mocha": "^9.0.3",
    "prettier": "^3.3.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^27.0.4",
    "typescript": "^5.5.3"
  },
  "homepage": "https://github.com/sagemathinc/cocalc-widgets",
  "repository": {
    "type": "git",
    "url": "https://github.com/sagemathinc/cocalc-widgets"
  },
  "author": "SageMath, Inc.",
  "contributors": [
    "William Stein <wstein@sagemath.com>",
    "Pete Blois <blois@google.com>"
  ],
  "bugs": {
    "url": "https://github.com/sagemathinc/cocalc-widgets/issues"
  },
  "pnpm": {
    "overrides": {
      "axios@>=0.8.1 <0.28.0": ">=0.28.0",
      "braces@<3.0.3": ">=3.0.3"
    }
  },
  "dependencies": {
    "@types/backbone": "^1.4.19"
  }
}
