{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "lib": ["esnext", "dom"],
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
